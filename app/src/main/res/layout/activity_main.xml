<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Simple Alarm App (Hardcode)"
            app:titleCentered="true"
            android:background="#F3F0E0" />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_alarm1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Set Alarm 1"
        app:backgroundTint="#386a20"
        android:layout_marginTop="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_set_alarm2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Set Alarm 2"
        app:backgroundTint="#386a20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_alarm1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_alarm"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Cancel All Alarm"
        app:backgroundTint="#386a20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_set_alarm2" />


</androidx.constraintlayout.widget.ConstraintLayout>